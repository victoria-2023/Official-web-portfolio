---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import SectionHeading from "../components/SectionHeading.astro";
import { site } from "../data/site";
import { experience } from "../data/experience";
import { softwareDevProjects, mlProjects } from "../data/projects";
import ExperienceItem from "../components/ExperienceItem.astro";
import ProjectCard from "../components/ProjectCard.astro";
import FeaturedLinks from "../components/FeaturedLinks.astro";
import SkillsGrid from "../components/SkillsGrid.astro";
import { skills } from "../data/skills";
import ContactForm from "../components/ContactForm.astro";
---
<BaseLayout title="Portfolio" description="Software Engineer">
  <Hero name={site.name} role={site.role} avatar={site.avatar ?? '/favicon.svg'} location={site.location} email={site.email} phone={site.phone} />

  <section class="py-16 text-center" aria-labelledby="about" data-reveal>
    <SectionHeading id="about" label="About" />
    <div class="text-fg/90 max-w-2xl space-y-4 mx-auto text-left">
      <p>Iâ€™m a Software Developer and AI/ML Engineer focused on delivering production-ready systems across data, machine learning, and modern web stacks. I build end-to-end solutions, from ETL pipelines and model training/serving to APIs and polished UIs, aiming for clarity, reliability, and measurable impact.</p>
    </div>
  </section>

  <section class="py-16" aria-labelledby="experience" data-reveal>
    <SectionHeading id="experience" label="Experience" />
    <ul class="space-y-6">
      {experience.map((item) => <ExperienceItem item={item} />)}
    </ul>
  </section>

  <SkillsGrid skills={skills} />

  <FeaturedLinks />

  <section class="py-16" aria-labelledby="projects" data-reveal>
    <SectionHeading id="projects" label="Projects" />
    <div class="grid md:grid-cols-2 gap-8 items-start">
      <div>
        <h3 class="text-lg font-semibold mb-4">ML Projects</h3>
        <div class="grid sm:grid-cols-2 gap-6">
          {mlProjects.map((project) => <ProjectCard project={project} />)}
        </div>
      </div>
      <div>
        <h3 class="text-lg font-semibold mb-4">Software Development</h3>
        <div class="grid sm:grid-cols-2 gap-6">
          {softwareDevProjects.map((project) => <ProjectCard project={project} />)}
        </div>
      </div>
    </div>
  </section>

  <ContactForm />
</BaseLayout>
