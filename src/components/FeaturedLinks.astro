---
import { featuredLinks } from '../data/featuredLinks';
---
<section class="featured-links mx-auto my-8 max-w-xl text-center">
  <h2 class="text-2xl font-bold mb-4">Featured</h2>
  <ul>
    {featuredLinks.map(link => (
      <li class="mb-4">
        <a href={link.href} target="_blank" rel="noopener" class="inline-block px-4 py-2 rounded bg-fuchsia-600 text-white font-semibold hover:bg-fuchsia-700 transition">
          {link.name}
        </a>
        <div class="text-muted mt-1">{link.blurb}</div>
      </li>
    ))}
  </ul>
</section>
